<div class="container">

  <h1>Index de Talks</h1>

<%###################### BÃºsqueda por palabra clave %>
  <%= form_tag talks_path, method: :get do %>

    <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Palabra Clave"
    %>

    <%= submit_tag "Search", class: "btn btn-primary mb-5" %>

  <% end %>

<%###################### Filtros %>
  <%= form_tag talks_path, method: :get do %>
    <%= range_field_tag "query[price]", min: 1, max: 1000 %>   
    <%= date_field_tag "query[date]", class: "form-control" %>
    <%= submit_tag "Search", class: "btn btn-primary mb-5" %>
  <% end %>


