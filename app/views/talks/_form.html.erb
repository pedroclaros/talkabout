<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Crear o modificar charla</h3>
        <%= simple_form_for [@talk] do |f| %>
          <%= f.input :title, placeholder: 'Titulo' %>
          <%= f.input :description, placeholder: 'Escribe la descripcion de tu evento..' %>
          <%= f.input :price, placeholder: 'Precio en pesos argentinos..' %>
          <%= f.input :time, placeholder: 'Title' %>
          <%= f.input :date, placeholder: 'Title' %>
          <%= f.input :photo, as: :file %>
          <%= f.association :category, placeholder: 'Category' %>
          <%= f.submit class: 'btn btn-primary w-100' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
